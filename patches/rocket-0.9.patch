+            ch = *read_ptr++;
+            *write_ptr++ = ch;
+            for (jx = 1; ((jx + ix) < count) && (jx < max_repeat); jx++)
+                    {
+                if (read_ptr[jx - 1] == ch)
+                    num ++;
+                else
+                    break;
+                }
+            if (num >= 3)
+                {
+                /*
+                 * It is not possible to use the '$', '#' and '%' characters to 
+                 * encode the size per gdb remote protocol specification. 
+                 * skip them.
+                 */
+
+                while (((num + 29) == '$') || ((num + 29) == '#') ||
+                       ((num + 29) == '%'))
+                    num--;
+
+                *write_ptr++ = '*';
+                *write_ptr++ = (unsigned char)(num + 29);
+                read_ptr += num;
+                ix += num;
+                }
+            }
+        *write_ptr = 0;
+        return (write_ptr);
+        }
