+/* PWM_FTM_MODE  Features Mode Selection */
+#define PWM_FTM_MODE_FTMEN        (0x1<<0)
+#define PWM_FTM_MODE_INIT         (0x1<<1)
+#define PWM_FTM_MODE_WPDIS        (0x1<<2)
+#define PWM_FTM_MODE_PWMSYNC      (0x1<<3)
