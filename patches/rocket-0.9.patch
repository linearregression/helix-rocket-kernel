+#include <board.h>
+#include <k20_sim.h>
+#include <pwm.h>
+
+#include "pwm_ftm.h"
+#include <stdio.h>
+
+/*
+ * Non-zero phase is not supported because combine mode is not yet
+ * implemented.
+ */
