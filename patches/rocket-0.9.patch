+
+#ifndef CONFIG_PWM_FTM_DEBUG
+#define DBG(...) {;}
+#else /* CONFIG_PWM_FTM_DEBUG */
+#if defined(CONFIG_STDOUT_CONSOLE)
+#include <stdio.h>
+#define DBG printf
+#else
+#include <misc/printk.h>
+#define DBG printk
+#endif /* CONFIG_STDOUT_CONSOLE */
+#endif /* CONFIG_PWM_FTM_DEBUG */
