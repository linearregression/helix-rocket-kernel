+/* FTM register bit definitions */
+
+
+#define PWM_FTM_SC(base)       ((base)+0x00) /* Status And Control */
+#define PWM_FTM_CNT(base)      ((base)+0x04) /* Counter */
+#define PWM_FTM_MOD(base)      ((base)+0x08) /* Modulo */
