+#define PWM_FTM_CNSC_ELSB (0x1<<3)
+#define PWM_FTM_CNSC_MSA  (0x1<<4)
+#define PWM_FTM_CNSC_MSB  (0x1<<5)
+#define PWM_FTM_CNSC_CHIE (0x1<<6)
+#define PWM_FTM_CNSC_CHF  (0x1<<7)
