+    for (ix = 0; ix < MAX_SW_BP; ix++)
+	{
+	/* First non valid entry in the table is the last entry */
+
+	if (bpArray[ix].valid == 0)
+	    break;
+	bpArray[ix].valid = 0;
+	}
